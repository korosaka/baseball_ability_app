<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="270" android:endColor="#005c42" android:startColor="#006948" android:type="linear" />
            <stroke android:width="3dp" android:color="#004d25" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="270" android:endColor="#2cb4ad" android:startColor="#a3d6cc" android:type="linear" />
            <stroke android:width="3dp" android:color="#004d25" />
        </shape>
    </item>
</selector>